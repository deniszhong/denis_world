<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.denis.zhong.world.mapper.PostMapper">

    <resultMap id="BaseResultMap" type="com.denis.zhong.world.mapper.entity.Post">
        <!--@Table post-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="topicId" column="topic_id" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="createtime" column="createtime" jdbcType="TIMESTAMP"/>
        <result property="modifytime" column="modifytime" jdbcType="TIMESTAMP"/>
        <result property="deleted" column="deleted" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, topic_id, content, createtime, modifytime, deleted
        from post
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, topic_id, content, createtime, modifytime, deleted
        from post
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, topic_id, content, createtime, modifytime, deleted
        from post
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="topicId != null">
                and topic_id = #{topicId}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="createtime != null">
                and createtime = #{createtime}
            </if>
            <if test="modifytime != null">
                and modifytime = #{modifytime}
            </if>
            <if test="deleted != null">
                and deleted = #{deleted}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into post(topic_id, content, createtime, modifytime, deleted)
        values (#{topicId}, #{content}, #{createtime}, #{modifytime}, #{deleted})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update post
        <set>
            <if test="topicId != null">
                topic_id = #{topicId},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="createtime != null">
                createtime = #{createtime},
            </if>
            <if test="modifytime != null">
                modifytime = #{modifytime},
            </if>
            <if test="deleted != null">
                deleted = #{deleted},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from post where id = #{id}
    </delete>

</mapper>